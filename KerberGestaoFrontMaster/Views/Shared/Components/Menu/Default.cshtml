@using KerberGestaoRegraDeNegocio.Models.Dtos;
@using KerberGestaoRegraDeNegocio.Models;
@using KerberGestaoRegraDeNegocio.Models.Enums;
@model UsuarioDto
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/sistema-geral.css" media="screen" />
</head>
<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Olá @Model.Nome</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="OrdemServico" asp-action="Index">Ordem de Serviço</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Cliente" asp-action="Index">Clientes</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Projeto" asp-action="Index">Projetos</a>
        </li>
        @if (Model.Perfil == PerfilEnum.Admin)
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Index">Usuários</a>
            </li>
        }
        @if (Model.Perfil == PerfilEnum.Admin)
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Orcamento" asp-action="Index">Orçamentos</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="AlterarSenha" asp-action="Index">Alterar Senha</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a>
        </li>
    </ul>
</div>