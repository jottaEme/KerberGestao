@using KerberGestaoRegraDeNegocio.Models.Dtos
@using KerberGestaoRegraDeNegocio.Models;
@using KerberGestaoRegraDeNegocio.Models.Enums;
@model OrcamentoDto
@{
    ViewData["Title"] = "Cadastrar Novo Orçamento";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Duas-Divs-Na-Linha.css" />
</head>
<body>
    <br />
    <br />
    <div class="text-center">

        <h1 class="display-4">Cadastrar Novo Orçamento</h1>

    </div>

    <form asp-controller="Orcamento" asp-action="CriarNoBanco" method="post">
        <div class="form-group">
            <label for="NomeOrcamento">Nome</label>
            <input type="text" asp-for="NomeOrcamento" class="form-control" placeholder="Digite o Nome">
            @Html.ValidationMessageFor(x => x.NomeOrcamento)
        </div>
        <div class="form-group col-lg-5" id="duasDivs">
            <label for="StatusOrcamento">Status</label>
            <select class="form-control" id="StatusOrcamento" name="StatusOrcamento">
                <option selected>@StatusOrcamentoEnum.Aguardando</option>
                <option value="@StatusOrcamentoEnum.ListagemDeMaterial">Listagem de Material</option>
                <option value="@StatusOrcamentoEnum.Finalizado">Finalizado</option>
            </select>
        </div>
        <br />
        <button type="submit" class="btn btn-outline-success btn-block">Cadastrar</button>
        <a class="btn btn-outline-dark btn-block" asp-controller="Orcamento" asp-action="Index" role="button">Voltar</a>
    </form>
</body>




