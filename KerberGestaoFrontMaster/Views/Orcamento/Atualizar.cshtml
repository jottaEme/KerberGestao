@using KerberGestaoRegraDeNegocio.Models.Dtos
@using KerberGestaoRegraDeNegocio.Models;
@model OrcamentoDto
@{
    ViewData["Title"] = "Atualizar Orçamento";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
</head>
<div class="text-center">

    <h1 class="display-4">Atualizar Orçamento</h1>

</div>

<form asp-controller="Orcamento" asp-action="Atualizar" method="post">
    <input type="hidden" asp-for="IdOrcamentos" />
    <div class="form-group col-md-6">
        <label for="Status">Status:</label>
        <select class="form-control" id="Status" name="Status">
            <option selected>@Model.StatusOrcamento</option>
            <option value="@StatusOrcamentoEnum.Iniciado">Iniciado</option>
            <option value="@StatusOrcamentoEnum.Impedimento">Impedimento</option>
            <option value="@StatusOrcamentoEnum.Finalizado">Finalizado</option>
        </select>
    </div>

    <button type="submit" class="btn btn-outline-success btn-block">Alterar</button>
    <a class="btn btn-outline-dark btn-block" asp-controller="Orcamento" asp-action="Index" role="button">Voltar</a>
</form>



