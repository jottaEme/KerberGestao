@using KerberGestaoRegraDeNegocio.Models.Dtos
@using KerberGestaoRegraDeNegocio.Models;
@using KerberGestaoRegraDeNegocio.Models.Enums;
@model UsuarioDto
@{
    ViewData["Title"] = "Atualizar Usuário";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
</head>
<body>
    <br />
    <br />
    <div class="text-center">
        <h1 class="display-4">Atualizar Usuário</h1>
    </div>

    <form asp-controller="Usuario" asp-action="Atualizar" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="Nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do Usuário">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="form-group">
            <label for="Login">Login</label>
            <input type="text" asp-for="Login" class="form-control" placeholder="" readonly>
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="" readonly>
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="form-group">
            <label for="DataCadastro">Data do Cadastro</label>
            <input type="text" asp-for="DataCadastro" class="form-control" placeholder="" readonly>
            @Html.ValidationMessageFor(x => x.DataCadastro)
        </div>
        <div class="form-group">
            <label for="DataAtualizacao">Data Atualização</label>
            <input type="text" asp-for="DataAtualizacao" class="form-control" placeholder="" readonly>
            @Html.ValidationMessageFor(x => x.DataAtualizacao)
        </div>
        <div class="form-group col-md-6">
            <label for="Perfil">Perfil</label>
            <select class="form-control" id="Perfil" name="Perfil">
                <option selected>@Model.Perfil</option>
                <option value="@PerfilEnum.Admin">Administrador</option>
                <option value="@PerfilEnum.Padrao">Padrão</option>
            </select>
        </div>
        <br />
        <button type="submit" class="btn btn-outline-success btn-block">Alterar</button>
        <a class="btn btn-outline-dark btn-block" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
    </form>
</body>




