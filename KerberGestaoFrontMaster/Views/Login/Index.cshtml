@using KerberGestaoRegraDeNegocio.Models.Dtos
@model LoginDto
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" type="text/css" href="~/css/login.css" media="screen" />
    <link rel="stylesheet" type="text/css" href="~/css/sistema-geral.css" />
</head>
<body>
    <br />
    <br />
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-outline-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-outline-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    <body class="fundoClaro">
        <section class="gradient-form">
            <div class="container ">
                <div class="row d-flex justify-content-center align-items-center">
                    <div class="col-xl-10">
                        <div class="card text-black">
                            <div class="row g-0">
                                <div class="col-lg-6">
                                    <div class="card-body p-md-5 mx-md-4">

                                        <div class="text-center">
                                            <img id="logotipo" src="~/css/kerber.jpg" />
                                            <h4 class="mt-1 mb-5 pb-1">Nós somos a Kerber</h4>
                                        </div>

                                        <form asp-controller="Login" asp-action="Entrar" method="post">
                                            <p>Por favor, insira seus dados de login</p>

                                            <div class="form-outline mb-4">
                                                <input type="text" asp-for="LoginUsuario" class="form-control"
                                                       placeholder="login" />
                                                <label class="form-label" for="LoginUsuario"></label>
                                                @Html.ValidationMessageFor(x => x.LoginUsuario)
                                            </div>

                                            <div class="form-outline mb-4">
                                                <input type="password" asp-for="Senha" class="form-control"
                                                       placeholder="senha" />
                                                <label class="form-label" for="Senha"></label>
                                                @Html.ValidationMessageFor(x => x.Senha)
                                            </div>

                                            <div class="text-center pt-1 mb-5 pb-1 corTextoClara">
                                                <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3 corTextoClara" type="submit">
                                                    Entrar
                                                </button>
                                                <p class="mb-4 text-sm mx-auto corTextoClara">
                                                    <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary text-gradient font-weight-bold">Redefinir minha senha</a>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                                <div class="col-lg-6 d-flex align-items-center gradient-custom-2 corTextoClara">
                                    <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                        <h4 class="mb-4 corTextoClara">We are more than just a company</h4>
                                        <p class="small mb-0 corTextoClara">
                                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                                            tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                                            exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </body>
</body>

