@using KerberGestaoRegraDeNegocio.Models.Dtos
@model RedefinirSenhaDto
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/botoes.css" media="screen" />
</head>

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-outline-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-outline-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}

<form asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">
    <div class="form-group">
        <label for="LoginUsuario">Login</label>
        <input type="text" asp-for="LoginUsuario" class="form-control" placeholder="Digite o Login">
        @Html.ValidationMessageFor(x => x.LoginUsuario)
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br />
    <button type="submit" class="btn btn-outline-success btn-block">Redefinir Senha</button>
    <a class="btn btn-outline-dark btn-block" asp-controller="Login" asp-action="Index" role="button">Voltar</a>
</form>