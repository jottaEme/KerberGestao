@using KerberGestaoRegraDeNegocio.Models.Dtos
@model List<OrdemServicoComNomesDto>
@{
    ViewData["Title"] = "Dashboard de Ordens De Serviço";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-outline-danger btn-sm close-alert" arial-label="Close">x</button>
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-outline-danger btn-sm close-alert" arial-label="Close">x</button>
        @TempData["MensagemErro"]
    </div>
}
<br />

<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a class="btn btn-outline-success" role="button" asp-controller="OrdemServico" asp-action="Criar">Criar Ordem de Serviço</a>
</div>
<br />

<div class="text-center">
    <h1 class="display-4">Listagem de Ordens de Serviço</h1>
    <br />
    <table class="table" id="table-clientes">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome do Cliente</th>
                <th scope="col">Nome do Orçamento</th>
                <th scope="col">Título</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var os in Model)
                {
                    <tr>
                        <th scope="row">@os.IdOrdemServico</th>
                        <td>@os.Cliente.NomeCliente</td>
                        <td>@os.Orcamento.NomeOrcamento</td>
                        <td>@os.Titulo</td>
                        <td>@os.Status</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-outline-success" asp-route-id="@os.IdOrdemServico" asp-controller="OrdemServico" asp-action="Atualizar">Editar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>



